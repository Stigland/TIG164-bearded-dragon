<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="10dp"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#90ffffff"
        android:startColor="#ffffff"
        android:endColor="#70ffffff"
        android:type="linear"
        />
    <solid
        android:color="#80ffffff"
        />
    <size
        android:width="270dp"
        android:height="60dp"
        />
    <stroke
        android:width="3dp"
        android:color="#2D6C87"
        />
</shape>