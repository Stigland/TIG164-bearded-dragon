<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/backgroundBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TODAY&apos;S SCHEDULE"
            android:id="@+id/check_in_title"
            android:layout_alignParentTop="true"
            android:textSize="35sp"
            android:textColor="@color/darkBlue"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="08:00 - 16:00"
            android:id="@+id/schedule_time_tv"
            android:textSize="60sp"
            android:layout_below="@+id/check_in_title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/darkBlue"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/check_in_btn"
            android:background="@drawable/bell_icon_black"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECK IN"
            android:textSize="50sp"
            android:id="@+id/check_in_btn_tv"
            android:layout_below="@+id/check_in_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/darkBlue"
            android:textAlignment="center" />

    </RelativeLayout>


</LinearLayout>