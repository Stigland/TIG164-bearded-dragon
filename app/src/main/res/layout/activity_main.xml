<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leand.tig164_beardeddragon.MainActivity"
    android:background="@color/backgroundBlue">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:id="@+id/menu_OpenCalendar_Btn"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/menu_OpenCheckIn_Btn"
        android:layout_centerHorizontal="true"
        android:background="@color/darkBlue"
        android:textColor="@color/yellow"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:id="@+id/menu_OpenContacts_Btn"
        android:layout_below="@+id/menu_OpenCheckIn_Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:background="@color/darkBlue"
        android:textColor="@color/yellow"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check in"
        android:id="@+id/menu_OpenCheckIn_Btn"
        android:layout_centerVertical="true"
        android:background="@color/darkBlue"
        android:layout_alignRight="@+id/menu_OpenCalendar_Btn"
        android:layout_alignEnd="@+id/menu_OpenCalendar_Btn"
        android:textColor="@color/yellow"/>

</RelativeLayout>
