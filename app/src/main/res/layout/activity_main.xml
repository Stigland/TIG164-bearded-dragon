<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leand.tig164_beardeddragon.MainActivity"
    android:background="@color/backgroundBlue">


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/menu_OpenCalendar_Btn"
        android:textColor="#000000"
        android:textSize="25sp"
        android:background="@drawable/calendar_icon_black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/menu_OpenContacts_Btn"
        android:background="@drawable/contacts_icon_black"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/check_in_tv"
        android:layout_alignLeft="@+id/menu_OpenCheckIn_Btn"
        android:layout_alignStart="@+id/menu_OpenCheckIn_Btn"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/menu_OpenCheckIn_Btn"
        android:background="@drawable/bell_icon_black"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/calendar_tv"
        android:layout_alignLeft="@+id/check_in_tv"
        android:layout_alignStart="@+id/check_in_tv"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CALENDAR"
        android:id="@+id/calendar_tv"
        android:layout_below="@+id/menu_OpenCalendar_Btn"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="COLLEAGUES"
        android:id="@+id/contacts_tv"
        android:layout_below="@+id/menu_OpenContacts_Btn"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHECK IN"
        android:id="@+id/check_in_tv"
        android:layout_below="@+id/menu_OpenCheckIn_Btn"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkBlue"/>

</RelativeLayout>
